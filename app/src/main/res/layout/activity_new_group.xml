            <android.support.v7.widget.AppCompatSpinner

                android:layout_marginTop="@dimen/margin_form"
                android:id="@+id/sp_local_new_group"
                android:layout_width="match_parent"
                android:tooltipText="Selecione um lugar"
                android:fontFamily="sans-serif-thin"
                android:layout_height="wrap_content"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/margin_form">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-thin"
                android:textStyle="bold"
                android:text="Intervalo de duração"/>

            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/bt_time_init_new_group"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:background="#c7c7c7"
                    android:fontFamily="sans-serif-thin"
                    android:layout_weight="1"
                    android:layout_centerVertical="true"
                    android:hint="Horário Inicial" />

                <Button
                    android:id="@+id/bt_time_end_new_group"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#a3a3a3"
                    android:layout_centerHorizontal="true"
                    android:fontFamily="sans-serif-thin"
                    android:layout_centerVertical="true"
                    android:hint="Horário Final"
                    android:layout_width="0dp" />
            </LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dias na semana"
                android:textStyle="bold"
                android:fontFamily="sans-serif-thin"
                android:layout_marginTop="@dimen/margin_form"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <CheckBox
                    android:id="@+id/cb_dom_new_group"
                    android:text="D"
                    android:fontFamily="sans-serif-thin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <CheckBox
                    android:id="@+id/cb_seg_new_group"
                    android:text="S"
                    android:fontFamily="sans-serif-thin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <CheckBox
                    android:id="@+id/cb_ter_new_group"
                    android:text="T"
                    android:fontFamily="sans-serif-thin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <CheckBox
                    android:id="@+id/cb_qua_new_group"
                    android:text="Q"
                    android:fontFamily="sans-serif-thin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <CheckBox
                    android:id="@+id/cb_qui_new_group"
                    android:text="Q"
                    android:fontFamily="sans-serif-thin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <CheckBox
                    android:id="@+id/cb_sex_new_group"
                    android:text="S"
                    android:fontFamily="sans-serif-thin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <CheckBox
                    android:id="@+id/cb_sab_new_group"
                    android:text="S"
                    android:fontFamily="sans-serif-thin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <Button
                android:id="@+id/bt_create_new_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Criar"
                android:fontFamily="sans-serif-thin"
                android:padding="20dp"
                android:textStyle="bold"
                android:textColor="#fff"
                android:background="@color/colorPrimary"
                android:layout_marginTop="@dimen/margin_form"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
</ScrollView>